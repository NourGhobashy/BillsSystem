@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>لوحة التحكم - المشرف</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ✅ مكتبات CSS -->
    <link href="~/Libr/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Libr/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand fw-bold" href="#">لوحة التحكم</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light vh-100 pt-4 shadow-sm border-end">
                <ul class="nav flex-column fw-semibold">
                    
                        @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                                                ViewContext.RouteData.Values["action"]?.ToString() == "Index"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Company" asp-action="Index">Companies</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Bills" asp-action="Index">🧾 الفواتير</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Create">👥 العملاء</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">📦 المنتجات</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Payments" asp-action="Index">💰 المدفوعات</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Profile" asp-action="Index">👤 الملف الشخصي</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Profile" asp-action="Logout">🚪 تسجيل الخروج</a></li>
                </ul>
                <li class="nav-item">
                    <form asp-controller="Profile" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="nav-link btn btn-link text-danger p-0" style="border: none;">Logout</button>
                    </form>
                </li>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 pt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- ✅ Scripts -->
    <script src="~/Libr/jquery/jquery.min.js"></script>
    <script src="~/Libr/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Libr/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
