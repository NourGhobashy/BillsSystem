@using BillsSystem.Models.ViewModels
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <h5>Customers</h5>
                <h3>@Model.CustomerCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body text-center">
                <h5>Total Bills</h5>
                <h3>@Model.BillCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <h5>Total Amount</h5>
                <h3>@Model.TotalAmount.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-secondary text-white h-100">
            <div class="card-body text-center">
                <h5>Net Amount</h5>
                <h3>@Model.NetAmount.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body text-center">
                <h5>Remaining Amount</h5>
                <h3>@Model.RemainingAmount.ToString("C")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-danger text-white h-100">
            <div class="card-body text-center">
                <h5>Unpaid Bills</h5>
                <h3>@Model.UnpaidBillsCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <h5>Paid Bills</h5>
                <h3>@Model.PaidBillsCount</h3>
            </div>
        </div>
    </div>
</div>
